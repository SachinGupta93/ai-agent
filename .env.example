# =============================================================================
# MULTIMODAL AI AGENT - ENVIRONMENT CONFIGURATION
# =============================================================================

# =============================================================================
# CORE AI MODEL APIs (Required for basic functionality)
# =============================================================================

# OpenAI API (GPT-4, GPT-3.5, DALL-E, Whisper)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenRouter API (Access to Claude, Gemini, Mistral, LLaMA, and more)
# Get your key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key-here

# =============================================================================
# ADDITIONAL AI MODEL APIs (Optional but recommended)
# =============================================================================

# Anthropic API (Claude 3 Opus, Sonnet, Haiku)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Google AI API (Gemini Pro, Gemini Vision)
# Get your key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-google-ai-api-key-here

# Hugging Face API (Access to thousands of models)
# Get your key from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=hf_your-huggingface-token-here

# =============================================================================
# WEB SEARCH & CONTENT APIs (Optional but enhances capabilities)
# =============================================================================

# Tavily Search API (Best for AI applications)
# Get your key from: https://tavily.com
TAVILY_API_KEY=tvly-your-tavily-api-key-here

# SerpAPI (Google Search Results)
# Get your key from: https://serpapi.com
SERPAPI_API_KEY=your-serpapi-key-here

# =============================================================================
# MESSAGING & COMMUNICATION INTEGRATIONS
# =============================================================================

# Telegram Bot Token
# Create a bot with @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# WhatsApp Business API (Optional)
# WHATSAPP_TOKEN=your-whatsapp-token-here
# WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# Twilio (For SMS/Voice integration)
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_PHONE_NUMBER=your-twilio-phone-number

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Environment
NODE_ENV=development
ENVIRONMENT=development

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
API_BASE_URL=http://localhost:8000

# =============================================================================
# AI AGENT CONFIGURATION
# =============================================================================

# Default Model Preferences
DEFAULT_TEXT_MODEL=gpt-4o-mini
DEFAULT_IMAGE_MODEL=gpt-4-vision-preview
DEFAULT_SPEECH_MODEL=whisper-1
DEFAULT_TRANSLATION_MODEL=gemini-pro

# Model Routing Settings
ENABLE_INTELLIGENT_ROUTING=true
COST_OPTIMIZATION=true
PERFORMANCE_OPTIMIZATION=true
LOAD_BALANCING=true

# Response Configuration
DEFAULT_TEMPERATURE=0.7
MAX_TOKENS=4096
DEFAULT_LANGUAGE=en
RESPONSE_TIMEOUT=30

# =============================================================================
# FINE-TUNING & TRAINING CONFIGURATION
# =============================================================================

# Fine-tuning Settings
ENABLE_FINE_TUNING=true
LORA_RANK=16
LORA_ALPHA=32
LORA_DROPOUT=0.1

# Training Configuration
LEARNING_RATE=2e-4
BATCH_SIZE=4
GRADIENT_ACCUMULATION_STEPS=4
NUM_EPOCHS=3
WARMUP_STEPS=100

# =============================================================================
# VOICE & SPEECH CONFIGURATION
# =============================================================================

# Voice Assistant Settings
VOICE_ENABLED=true
WAKE_WORD=hey assistant
VOICE_LANGUAGE=en
VOICE_SPEED=1.0
VOICE_VOLUME=0.8

# Speech Recognition Settings
STT_MODEL=whisper-large-v2
TTS_MODEL=gtts
AUDIO_SAMPLE_RATE=16000
MAX_AUDIO_DURATION=300

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================

# API Security
API_KEY_REQUIRED=false
JWT_SECRET=your-jwt-secret-key-here
SESSION_SECRET=your-session-secret-here

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_REQUESTS_PER_DAY=10000

# Content Filtering
ENABLE_CONTENT_FILTERING=true
ENABLE_SAFETY_CHECKS=true

# =============================================================================
# DATABASE & STORAGE CONFIGURATION
# =============================================================================

# Database (Optional - uses SQLite by default)
# DATABASE_URL=postgresql://user:password@localhost:5432/aiagent
# DATABASE_URL=mysql://user:password@localhost:3306/aiagent

# Redis (Optional - for caching and sessions)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your-redis-password

# File Storage
MAX_FILE_SIZE=50MB
UPLOAD_PATH=./uploads
TEMP_PATH=./temp

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_TO_CONSOLE=true
MAX_LOG_FILE_SIZE=100MB
LOG_BACKUP_COUNT=5

# JSON Logging
ENABLE_JSON_LOGGING=true
LOG_USER_INTERACTIONS=true
LOG_MODEL_PERFORMANCE=true
LOG_COSTS=true

# Monitoring & Analytics
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
METRICS_PORT=9090

# External Monitoring (Optional)
# WANDB_API_KEY=your-wandb-api-key
# TENSORBOARD_LOG_DIR=./logs/tensorboard

# =============================================================================
# DEPLOYMENT & CLOUD CONFIGURATION
# =============================================================================

# Deployment Settings
DEPLOYMENT_ENVIRONMENT=local
AUTO_UPDATES=false
HEALTH_CHECK_INTERVAL=60

# Cloud Platform Settings
CLOUD_PROVIDER=none
# CLOUD_PROVIDER=aws|gcp|azure|huggingface

# Hugging Face Spaces
# HF_SPACE_NAME=your-username/your-space-name
# HF_TOKEN=your-hf-token

# Docker Configuration
DOCKER_IMAGE_TAG=latest
CONTAINER_PORT=8000

# =============================================================================
# PERFORMANCE & OPTIMIZATION
# =============================================================================

# Caching
ENABLE_CACHING=true
CACHE_TTL=3600
MAX_CACHE_SIZE=1000

# Processing
ENABLE_PARALLEL_PROCESSING=true
MAX_CONCURRENT_REQUESTS=10
WORKER_THREADS=4

# GPU Configuration
ENABLE_GPU=true
GPU_MEMORY_FRACTION=0.8
ENABLE_MODEL_QUANTIZATION=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Core Features
ENABLE_WEB_SEARCH=true
ENABLE_DOCUMENT_PROCESSING=true
ENABLE_IMAGE_ANALYSIS=true
ENABLE_VOICE_PROCESSING=true
ENABLE_CODE_EXECUTION=false

# Integrations
ENABLE_TELEGRAM_BOT=true
ENABLE_WHATSAPP_BOT=false
ENABLE_VOICE_ASSISTANT=true
ENABLE_API_SERVER=true

# Advanced Features
ENABLE_MEMORY_SYSTEM=true
ENABLE_LEARNING=true
ENABLE_CUSTOM_INSTRUCTIONS=true
ENABLE_MULTI_USER=false

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Development Settings
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_PROFILING=false

# Testing
ENABLE_TEST_MODE=false
MOCK_API_CALLS=false
TEST_DATA_PATH=./test_data

# Development Tools
ENABLE_HOT_RELOAD=true
ENABLE_AUTO_RESTART=true

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================

# Custom Instructions
CUSTOM_INSTRUCTIONS="You are a helpful AI assistant. Be concise and accurate."

# User Preferences
DEFAULT_USER_LANGUAGE=en
DEFAULT_RESPONSE_STYLE=professional
DEFAULT_COMPLEXITY_LEVEL=intermediate

# Experimental Features
ENABLE_EXPERIMENTAL_FEATURES=false
BETA_FEATURES=false

# =============================================================================
# NOTES & INSTRUCTIONS
# =============================================================================

# 1. Copy this file to .env and fill in your actual API keys
# 2. Never commit .env files to version control
# 3. Required variables: OPENAI_API_KEY, OPENROUTER_API_KEY
# 4. Optional but recommended: TAVILY_API_KEY, TELEGRAM_BOT_TOKEN
# 5. For production, set NODE_ENV=production and configure security settings
# 6. Adjust model preferences based on your use case and budget
# 7. Enable only the features you need to optimize performance
# 8. Monitor your API usage and costs regularly

# =============================================================================
# QUICK SETUP GUIDE
# =============================================================================

# Minimal setup (just copy these lines to .env):
# OPENAI_API_KEY=sk-your-openai-key
# OPENROUTER_API_KEY=sk-or-v1-your-openrouter-key
# TELEGRAM_BOT_TOKEN=your-telegram-token (optional)
# TAVILY_API_KEY=tvly-your-tavily-key (optional)

# =============================================================================