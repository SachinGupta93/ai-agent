# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenRouter Configuration (for Claude, Gemini, Mistral, LLaMA models)
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-api-key-here

# Web Search APIs (Optional)
# Tavily Search (Recommended for AI applications)
# Get your API key from: https://tavily.com
TAVILY_API_KEY=tvly-your-tavily-api-key-here

# SerpAPI (Google Search Results)
# Get your API key from: https://serpapi.com
SERPAPI_API_KEY=your-serpapi-key-here

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Development Settings
NODE_ENV=development

# Agent Configuration
DEFAULT_MODEL=gpt-4o-mini
DEFAULT_TEMPERATURE=0.7
MAX_TOKENS=4096

# Security Settings
SYSTEM_COMMANDS_ENABLED=true
VOICE_COMMANDS_ENABLED=true
AUTOMATION_ENABLED=true

# Memory Configuration
MAX_MEMORY_ENTRIES=1000
MEMORY_BACKUP_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_MEMORY_OPERATIONS=false
LOG_MODEL_USAGE=true